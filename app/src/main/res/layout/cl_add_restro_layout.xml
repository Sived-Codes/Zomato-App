<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_11sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_centerInParent="true"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/restro_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/baseline_image_24"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />


            <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/restroName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Your Hotel Name"
                android:textColorHint="#707070"
                android:maxLength="10"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/restroType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Hotel Type"
                android:textColorHint="#707070"
                android:maxLength="10"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/restroPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Hotel Location"
                android:textColorHint="#707070"
                android:maxLength="10"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/black"/>
            <EditText
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/restroContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Hotel contact detail"
                android:textColorHint="#707070"
                android:inputType="phone"
                android:maxLength="10"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/edit_text_bg"
                android:textColor="@color/black"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:id="@+id/addHotelBtn"
                android:layout_height="@dimen/_45sdp"
                android:backgroundTint="@color/red"
                app:cornerRadius="@dimen/_11sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="Add Hotel"
                android:textColor="@color/white"
                android:textStyle="bold"/>


        </LinearLayout>

        <ProgressBar
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pd"/>
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>